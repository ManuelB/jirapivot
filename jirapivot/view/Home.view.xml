<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:jp="jirapivot.control" controllerName="jirapivot.controller.Home">
    <Page title="JIRA Pivot">
        <jp:PivotTable id="pivotTable"></jp:PivotTable>
        <footer>
            <Toolbar>
                <Button text="Configure JIRA connection" press="onJiraConfigurationShow" />
                <ToolbarSpacer/>
                <ToolbarSpacer />
                <Button text="Load Jira issues" press="onJiraIssueLoad" />
                <Button text="Load Worklogs" press="onJiraWorklogLoad" />
                <Button text="Fill Pivot Table" press="onFillPivotTable" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>